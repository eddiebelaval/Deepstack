# DeepStack Web Frontend Environment Variables
# Copy this to .env.local for local development

# Backend API (local: http://127.0.0.1:8000, prod: Railway URL)
NEXT_PUBLIC_API_URL=http://127.0.0.1:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Anthropic API Key (server-side AI features)
ANTHROPIC_API_KEY=

# Supabase (portfolio tracking & auth)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Sentry Error Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Upstash Redis (distributed rate limiting - required for production/serverless)
# Get these from https://console.upstash.com/
# Without these, rate limiting falls back to in-memory (single-instance only)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Alpaca API (direct market data fallback when Python backend is unavailable)
# Get these from https://alpaca.markets/
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Ollama Configuration (for embeddings)
# Run: ollama pull nomic-embed-text
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBED_MODEL=nomic-embed-text

# Perplexity AI (for financial research and deep research)
# Get this from https://perplexity.ai/
PERPLEXITY_API_KEY=

# Stripe (payments - optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
